{% extends 'bases.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block content %}
    <div class="container mx-auto p-4">
        <!-- Titre de la page -->
        <h1 class="text-3xl font-bold text-center mb-4">{{ pageTitle }}</h1>
        <p class="text-xl text-center mb-8 text-gray-600">{{ pageDescription }}</p>

        <!-- Section FAQ -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4 text-blue-600">Questions fréquentes</h2>
            <div class="space-y-4">
                {% for item in faq %}
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <h3 class="text-xl font-semibold text-gray-800">{{ item.question }}</h3>
                        <p class="text-lg text-gray-600">{{ item.answer|raw }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- Section Guide d'utilisation -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4 text-blue-600">Comment utiliser l'application</h2>
            <div class="space-y-4">
                {% for item in guide %}
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <h3 class="text-xl font-semibold text-gray-800">{{ item.title }}</h3>
                        <p class="text-lg text-gray-600">{{ item.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- Section Contact et support -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4 text-blue-600">Contactez-nous</h2>
            <div class="space-y-4">
                <p class="text-lg text-gray-600">Pour toute question ou problème, contactez-nous à l'adresse : <a href="mailto:{{ contact.email }}" class="text-blue-600 hover:text-blue-800">{{ contact.email }}</a>.</p>
                <p class="text-lg text-gray-600">Vous pouvez également nous contacter via nos réseaux sociaux :</p>
                <div class="flex space-x-4">
                    {% for social in contact.socialMedia %}
                        <a href="{{ social.link }}" class="text-blue-600 hover:text-blue-800">{{ social.name }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Section Informations supplémentaires -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4 text-blue-600">Informations utiles</h2>
            <div class="space-y-4">
                {% for link in usefulLinks %}
                    <a href="{{ link.link }}" class="text-blue-600 hover:text-blue-800 block">{{ link.text }}</a>
                {% endfor %}
            </div>
        </div>

        <!-- Section Feedback -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4 text-blue-600">Votre avis compte</h2>
            <div class="space-y-4">
                <p class="text-lg text-gray-600">Nous aimerions connaître votre avis pour améliorer l'application.</p>
                {% for item in feedback %}
                    <a href="{{ item.link }}" class="text-blue-600 hover:text-blue-800 block">{{ item.text }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}