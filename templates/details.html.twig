{% extends 'bases.html.twig' %}

{% block title %}Détails - {{ place.nom }}{% endblock %}

{% block content %}
<div class="container mt-4">

    {% if type == 'restaurants' %}
        <h3>Informations sur le restaurant</h3>
        <ul>
            <li><b>Nom :</b> {{ place.nom }}</li>
            <li><b>Type :</b> {{ place.type }}</li>
            <li><b>Marque :</b> {{ place.marque|default('Non spécifiée') }}</li>
            <li><b>Cuisine :</b> {{ place.cuisine|default('Non spécifiée') }}</li>
            <li><b>Végétarien :</b> {{ place.vegetarien ? 'Oui' : 'Non' }}</li>
            <li><b>Végan :</b> {{ place.vegane ? 'Oui' : 'Non' }}</li>
            <li><b>Heures d'ouverture :</b> {{ place.heures_ouverture|default('Non spécifiées') }}</li>
            <li><b>Accès handicapés :</b> {{ place.acces_handicapes ? 'Oui' : 'Non' }}</li>
            <li><b>Téléphone :</b> {{ place.telephone|default('Non spécifié') }}</li>
            <li><b>Site web :</b> 
                {% if place.site_web %}
                    <a href="{{ place.site_web }}" target="_blank">{{ place.site_web }}</a>
                {% else %}
                    Non spécifié
                {% endif %}
            </li>
            <li><b>Ville :</b> {{ place.ville }}</li>
            <li><b>Code ville :</b> {{ place.code_ville }}</li>
            <li><b>Département :</b> {{ place.departement }} (Code : {{ place.code_departement }})</li>
            <li><b>Région :</b> {{ place.region }} (Code : {{ place.code_region }})</li>

            <!-- Bouton "S'y rendre" -->
            <button onclick="window.open('https://www.google.com/maps?q={{ place.lat }},{{ place.lon }}', '_blank')">
                S'y rendre
            </button>

        </ul>
    {% elseif type == 'hotels' %}
        <h3>Informations sur l'hôtel</h3>
        <ul>
            <li><b>Nom :</b> {{ place.nom }}</li>
            <li><b>Type :</b> {{ place.type }}</li>
            <li><b>Accès handicapés :</b> {{ place.acces_handicapes ? 'Oui' : 'Non' }}</li>
            <li><b>Nombre d'étoiles :</b> {{ place.nb_etoiles }}</li>
            <li><b>Nombre de chambres :</b> {{ place.nb_chambres }}</li>
            <li><b>Accès à Internet :</b> {{ place.acces_internet ? 'Oui' : 'Non' }}</li>
            <li><b>Site web :</b>
                {% if place.site_web %}
                    <a href="{{ place.site_web }}" target="_blank">{{ place.site_web }}</a>
                {% else %}
                    Non spécifié
                {% endif %}
            </li>
            <li><b>Téléphone :</b> {{ place.telephone|default('Non spécifié') }}</li>
            <li><b>Page Facebook :</b> 
                {% if place.page_facebook %}
                    <a href="{{ place.page_facebook }}" target="_blank">{{ place.page_facebook }}</a>
                {% else %}
                    Non spécifiée
                {% endif %}
            </li>
            <li><b>Email :</b> {{ place.email|default('Non spécifié') }}</li>
            <li><b>Ville :</b> {{ place.ville }}</li>
            <li><b>Code postal :</b> {{ place.code_postal }}</li>
            <li><b>Département :</b> {{ place.departement }} (Code : {{ place.code_departement }})</li>
            <li><b>Région :</b> {{ place.region }} (Code : {{ place.code_region }})</li>

            <!-- Bouton "S'y rendre" -->
            <button onclick="window.open('https://www.google.com/maps?q={{ place.lat }},{{ place.lon }}', '_blank')">
                S'y rendre
            </button>
            
        </ul>
    {% elseif type == 'jardins' %}
        <h3>Informations sur le jardin</h3>
        <ul>
            <li><b>Nom :</b> {{ place.nom }}</li>
            <li><b>Code postal :</b> {{ place.code_postal }}</li>
            <li><b>Région :</b> {{ place.region }}</li>
            <li><b>Département :</b> {{ place.departement }}</li>
            <li><b>Adresse :</b> {{ place.adresse }}</li>
            <li><b>Ville :</b> {{ place.ville }}</li>
            <li><b>Code département :</b> {{ place.code_departement }}</li>
            <li><b>Code région :</b> {{ place.code_region }}</li>
            <li><b>Site web :</b>
                {% if place.site_web %}
                    <a href="{{ place.site_web }}" target="_blank">{{ place.site_web }}</a>
                {% else %}
                    Non spécifié
                {% endif %}
            </li>
            <li><b>Type :</b> {{ place.type }}</li>
            <li><b>Description :</b> {{ place.description }}</li>
            <li><b>Accessible au public :</b> {{ place.accessible_au_public ? 'Oui' : 'Non' }}</li>

            <!-- Bouton "S'y rendre" -->
            <button onclick="window.open('https://www.google.com/maps?q={{ place.lat }},{{ place.lon }}', '_blank')">
                S'y rendre
            </button>
            
        </ul>
    {% elseif type == 'musees' %}






    <style>
        /* Jumbotron avec fond gris clair et texte noir, bords arrondis */
        .jumbotron-light, .jumbotron-light h1 {
            background-color: #f1f1f1; /* Gris clair */
            color: #000; /* Texte noir */
            border-radius: 15px; /* Bords arrondis */
            padding: 30px; /* Un peu d'espace interne */
            margin-bottom: 20px; /* Espace entre les jumbotrons */
        }

        /* Jumbotron avec fond noir et texte blanc, bords arrondis */
        .jumbotron-dark, .jumbotron-dark p, .jumbotron-dark h1{
            background-color: #d8b7a6; 
            color: #000; /* Texte blanc */
            border-radius: 15px; /* Bords arrondis */
            padding: 30px; /* Un peu d'espace interne */
            margin-bottom: 20px; /* Espace entre les jumbotrons */
        }

        /* Optionnel: ajouter une légère ombre au fond pour le côté moderne */
        .jumbotron-light, .jumbotron-dark {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>











<div class="container mt-5">

    <!-- Jumbotron pour le nom du musée -->
         

    <!-- Jumbotron pour l'histoire, atouts et autres informations -->
    <div class="jumbotron-dark">
        <h1 class="display-4">{{ place.nom | upper }}</h1>
        
        {% if place.annee_creation != 0 %}
        <p><strong>Année de création : </strong>{{ place.annee_creation }}</p>
        {% endif %}
        
        <div class="jumbotron-dark"><p><strong>Histoire : </strong>{{ place.histoire }}</p></div>
        <div class="jumbotron-dark"><p><strong>Atouts : </strong>{{ place.atout }}</p></div>
        <div class="jumbotron-dark"><p><strong>Artiste(s) : </strong>{{ place.artiste }}</p></div>
        <div class="jumbotron-dark"><p><strong>Intérêts : </strong>{{ place.interet }}</p></div>
        <div class="jumbotron-dark"><p><strong>Thèmes : </strong>{{ place.themes }}</p></div>
    </div>

        <!-- Jumbotron pour l'adresse -->
    <div class="jumbotron-light">
        <h2>Adresse</h2>
        <p><strong>{{ place.adresse }}</strong></p>
        <p><strong>{{ place.code_postal }} {{ place.ville }}</strong></p>     
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="https://www.google.com/maps?q={{ place.lat }},{{ place.lon }}" role="button">S'y rendre</a>
        </p>
    </div>

    <!-- Jumbotron pour les informations de contact -->
    <div class="jumbotron-light">
        <h2>Informations de contact</h2>
        <p><strong>Site web : </strong><a href="{{ place.site_web }}" target="_blank">{{ place.site_web }}</a></p>
        <p><strong>Téléphone : </strong>{{ place.telephone }}</p>
    </div>


</div>

    {% else %}
        <p>Aucune information détaillée disponible pour ce type de lieu.</p>
    {% endif %}

<a href="#" onclick="goBack()" class="btn btn-secondary mt-3">Retour</a>

<script>
    function goBack() {
        const previousURL = localStorage.getItem('previousURL');
        if (previousURL) {
            window.location.href = previousURL;
        } else {
            window.history.back(); // Si l'URL précédente n'est pas stockée, revenir en arrière dans l'historique
        }
    }
</script>
</div>
{% endblock %}
