        <script>
    let slideIndex = 0;

    function showSlides() {
        let slides = document.getElementsByClassName("mySlides");
        let dots = document.getElementsByClassName("dot");
        
        // Cacher toutes les diapositives
        for (let i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";  
        }
        
        // Incrémenter l'indice de la diapositive
        slideIndex++;
        if (slideIndex > slides.length) {slideIndex = 1}    // Recommence à la première diapositive

        // Afficher la diapositive actuelle
        slides[slideIndex - 1].style.display = "block";  

        // Gérer les points de navigation
        for (let i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        if (dots.length > 0) {
            dots[slideIndex - 1].className += " active";
        }

        setTimeout(showSlides, 3000); // Changer d'image toutes les 3 secondes
    }

    showSlides(); // Démarrer le diaporama au chargement de la page
</script>

